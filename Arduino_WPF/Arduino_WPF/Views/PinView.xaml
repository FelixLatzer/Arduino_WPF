                </Button.Template>
            </Button>
            <Button x:Name="ButtonAddPin_Copy5" Command="{Binding AddPinCommand}" CommandParameter="6" Canvas.Left="329" Canvas.Top="357" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button.Template>
                    <ControlTemplate>
                        <Rectangle Width="15" Height="15" Fill="Green"/>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <Button x:Name="ButtonAddPin_Copy6" Command="{Binding AddPinCommand}" CommandParameter="7" Canvas.Left="329" Canvas.Top="340" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button.Template>
                    <ControlTemplate>
                        <Rectangle Width="15" Height="15" Fill="Green"/>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Canvas>

        <Grid x:Name="Details" Grid.Column="1">
            <ItemsControl Grid.Column="1" ItemsSource="{Binding Pins}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <local:CustomPin></local:CustomPin>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>
    </Grid>
</UserControl>
