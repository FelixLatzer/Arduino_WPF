<UserControl x:Class="Arduino_WPF.Views.CustomControlls.CustomPin"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Arduino_WPF.Views.CustomControlls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBox x:Name="TextBoxPinMode" Grid.Row="0" Height="50" Width="200" Margin="282,0,318,0"></TextBox>
        <Button x:Name="ButtonTogglePinMode" Grid.Row="1" Height="50" Width="200" Content="Toggle PinMode" Click="ButtonTogglePinMode_Click"></Button>
    </Grid>
</UserControl>
