<Window x:Class="Arduino_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Arduino_WPF"
        xmlns:Pin="clr-namespace:Arduino_WPF.Views.CustomControlls"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>

        <Pin:CustomPin Grid.Row="1"></Pin:CustomPin>
        <TextBox x:Name="TextBoxMainWindow" Grid.Row="2" Height="50" Width="200"></TextBox>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20">
            <Button Content="Open COM" Command="{Binding OpenCOMCommand}" Margin="5"/>
            <Button Content="Close COM" Command="{Binding CloseCOMCommand}" Margin="5"/>
            <Button Content="Refresh Pins" Command="{Binding RefreshPinsCommand}" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
