<Window x:Class="Arduino_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Arduino_WPF"
        xmlns:Pin="clr-namespace:Arduino_WPF.Views.CustomControlls"
        mc:Ignorable="d"
        Title="LAZSEL" Height="450" Width="800">
    <Grid Name="MyGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <ItemsControl ItemsSource="{Binding Pins}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Pin:CustomPin></Pin:CustomPin>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
            <Button Content="Open COM" Command="{Binding OpenCOMCommand}" Margin="5"/>
            <Button Content="Close COM" Command="{Binding CloseCOMCommand}" Margin="5"/>
            <Button Content="Refresh Pins" Command="{Binding RefreshPinsCommand}" Margin="5"/>
        </StackPanel>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
            <Button Content="List Ports" Command="{Binding ListPortsCommand}" Margin="5"/>
            <Button Content="create Pin" Command="{Binding AddNewPin}" Margin="5"/>
        </StackPanel>

        <ListBox x:Name="TestBox" Grid.Row="4" ItemsSource="{Binding AvailablePorts}" SelectedItem="{Binding SelectedPort}" HorizontalAlignment="Center" Width="200" Height="150" Margin="0,10"/>
    </Grid>
</Window>
